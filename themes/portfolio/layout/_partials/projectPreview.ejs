<article class="projectPreview" data-project-title="<%= project.title %>">
  <% if (project.thumbnail && project.vertical_layout) { %>
  <figure class="projectPreview-thumbnail projectPreview-thumbnail--wide"><img src="<%- url_for(project.path) + project.thumbnail %>"></figure>
  <% } %>
  <div class="projectPreview-container">
    <% if (project.thumbnail && !project.vertical_layout) { %><figure class="projectPreview-thumbnail projectPreview-thumbnail--default"><img src="<%- url_for(project.path) + project.thumbnail %>"></figure><% } %><% if (project.reading_time) { %><a class="projectPreview-link" href="<%- url_for(project.path) %>"><% } %><section class="projectPreview-text">
      <% if (project.title) { %>
      <h2 class="projectPreview-title"><%= project.title %></h2>
      <% } %>
      <% if (project.description) { %>
      <p class="projectPreview-description"><%= project.description %></p>
      <% } %>
      <ul class="projectPreview-meta">
        <% if (project.date) { %>
        <li class="projectPreview-date">
          <%- partial('project-date', {date_format: config.date_format, project: project}) %>
        </li>
        <% } %>
        <% if (project.reading_time) { %>
        <li class="projectPreview-readingTime"><%= project.reading_time %> min read</li>
        <% } %>
      </ul>
    </section><% if (project.reading_time) { %></a><% } %>
  </div>
</article>
